@model OAMS.Models.Rpt102
@using OAMS.Models
@{
    ViewBag.Title = "Summary Category";
}
<h2>
    Summary Category</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <p>
        Geo1: @(Html.EditorFor(model => model.Cat1FullName, "AutoCompleteCategory", new { level = 1 }))
        <input type="submit" value="Ok" />
    </p>
    <div>
        @if (Model != null && Model.List != null)
        { 
            <table id="tblResult" class="display">
                <thead>
                    <tr>
                        <th>
                            Category 1
                        </th>
                        <th>
                            Category 2
                        </th>
                        @{ CodeMasterRepository codeMasterRepository = new CodeMasterRepository();
                           var typeL = codeMasterRepository.Get(CodeMasterType.Type); }
                        @foreach (var item in typeL)
                        {
                            <th>
                                @item.Code
                            </th>
                        }
                        <th>
                            Total
                        </th>
                    </tr>
                </thead>
                @{ var v1 = Model.List.GroupBy(r => r.Product.Category1.Name); }
                <tbody>
                    @foreach (var item in v1)
                    {
                        int total = 0;
                        <tr>
                            <td>
                                @item.Key
                            </td>
                            <td>
                            </td>
                            @foreach (var type in typeL)
                            {
                                int c = item.Count(r => r.SiteDetail.Type == type.Code);
                                total += c;
                                <td>
                                    @c
                                </td>
                            }
                            <td>
                                @total
                            </td>
                        </tr>
                        
                        
                            var v2 = item.Where(r => r.Product.Category2 != null)
                                .GroupBy(r => r.Product.Category2.Name);

                            foreach (var item2 in v2)
                            {

                                int total2 = 0;
                        <tr>
                            <td>
                                @item.Key
                            </td>
                            <td>
                                @item2.Key
                            </td>
                            @foreach (var type in typeL)
                            {
                                int c = item2.Count(r => r.SiteDetail.Type == type.Code);
                                total2 += c;
                                <td>
                                    @c
                                </td>
                            }
                            <td>
                                @total2
                            </td>
                        </tr>   
	
                            }

                    }
                </tbody>
            </table>
        }
    </div>
    <script type="text/javascript">

        $(document).ready(function () {

            var oTable = $('#tblResult').dataTable({ "aaSorting": [[1, "desc"]],
                "sDom": 'CT<"clear">lfrtip',
                "oTableTools": { "sSwfPath": '@Url.Content("~/content/copy_cvs_xls_pdf.swf")', "aButtons": ["copy"] },
                "oLanguage": {
                    "sLengthMenu": 'Display <select>' +
				'<option value="10">10</option>' +
				'<option value="25">25</option>' +
				'<option value="50">50</option>' +
				'<option value="100">100</option>' +
				'<option value="-1">All</option>' +
				'</select> records'
                }
            });
        });
    </script>
    
}
